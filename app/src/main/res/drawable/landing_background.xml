<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient -->
    <item>
        <shape>
            <gradient
                android:startColor="#121212"
                android:endColor="#0B0B0B"
                android:angle="135"/>
        </shape>
    </item>

    <!-- Soft purple glow overlay -->
    <item android:top="0dp">
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="550dp"
                android:centerX="0.5"
                android:centerY="0.3"
                android:startColor="#3300FFAA"
                android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>
